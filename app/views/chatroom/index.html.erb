<main class="ui container grid">
  <nav class="row first-row">
    <div class="three wide left floated column col3 logo">CornerChat</div>
    <div class="nine wide column col3 logo">
      <div class="ui three item menu nav-bar">
        <a class="active item">Editorials</a>
        <a class="item">Reviews</a>
        <a class="item"><%= link_to 'logout', logout_path %></a>
      </div>
    </div>
  </nav>
  <section class="row main-content card">
    <div class="four wide column col5 card">
      <div class="ui card chat-box-element">
        <div class="content">
          <div class="ui items">
            <div class="item">
              <a class="ui tiny image">
                <img src="/images/avatar/large/stevie.jpg" />
              </a>
              <div class="content">
                <a class="header">Stevie Feliciano</a>
                <div class="description">
                  <p>Stevie said...</p>
                </div>
              </div>
            </div>
            <div class="item">
              <a class="ui tiny image">
                <img src="/images/avatar/large/stevie.jpg" />
              </a>
              <div class="content">
                <a class="header">Stevie Feliciano</a>
                <div class="description">
                  <p>Stevie said...</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="eight wide column col6">
      <div class="ui card chat-box-element">
        <div class="content group-name">
          <div class="ui feed">
            <div class="event">
              <div class="label">
                <img src="/images/avatar/small/jenny.jpg" />
              </div>
              <div class="content">
                <div class="summary">
                  <p>Jenny Hess</p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="content chat-content">
          <h4 class="ui horizontal divider header">Today</h4>
          <div class="ui small feed">
          
            <%= render @messages %>  

          </div>
        </div>
        <div class="extra content">
          <div class="ui action input send-message">
            <%# <input type="text" placeholder="Search..." />
            <button class="ui icon button">
              <i class="search icon"></i>
            </button> %>
            <%= form_with url: "/send_message", method: :post do |form| %>
              <%# <%= form.label :message_input, "Search for:" %>
              <%= form.text_field :message_input %>
              <button class="ui icon button">
              <%= form.submit %>
              <i class="search icon"></i>
              </button>
            <% end %>

          </div>
        </div>
      </div>
    </div>
    <div class="four wide column col7 card">
      <div class="ui card chat-box-element">
        <div class="content">
          <div class="ui items">
            <div class="item">
              <a class="ui tiny image">
                <img src="/images/avatar/large/jenny.jpg" />
              </a>
              <div class="middle aligned content">
                <div class="header">
                  <i class="like icon"></i>
                  Veronika Ossi
                </div>
              </div>
            </div>
            <div class="item">
              <a class="ui tiny image">
                <img src="/images/avatar/large/justen.jpg" />
              </a>
              <div class="middle aligned content">
                <div class="header">
                  <i class="favorite icon"></i>
                  Justen Kitsune
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
